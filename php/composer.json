{
    "require": {
        "php": "^8.3",
        "firebase/php-jwt": "^6.0",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "php-mock/php-mock-phpunit": "^2.10",
        "mockery/mockery": "^1.4"
    },

    "autoload": {
        "psr-4": {
            "NamespaceBase\\":    "Controller/",
            "NamespaceFunction\\": [
                "Controller/",
                "Controller/endpoints/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
